@using mitoSoft.Razor.Components
@using mitoSoft.Razor.Components.Enums
@using mitoSoft.Razor.Components.Templates

@inherits SynchronousDialog

<ModalTemplate Visibility="@base.Visibility" Title="@Properties.Resources.please_wait_" ShowCloseButton="false">
    <Content>
        <div class="text-center">
            <div class="spinner-border" style="width: 4rem; height: 4rem;" role="status">
            </div>
        </div>
    </Content>
</ModalTemplate>

@code {
    public event EventHandler OnShow;

    public event EventHandler OnHide;

    public override void Show()
    {
        this.OnShow?.Invoke(this, EventArgs.Empty);
        base.Show();
    }

    public void Hide()
    {
        this.Close(DialogResult.None);
        this.OnHide?.Invoke(this, EventArgs.Empty);
    }
}